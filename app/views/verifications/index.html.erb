<% @verifications.each do |verification| %>
  <tr>
    <td><%= verification.manufacturer_id %></td>
    <td><%= verification.retailer_id %></td>
    <td><%= verification.status %></td>
    <td><%= link_to 'Show', verification %></td>
    <td><%= link_to 'Edit', edit_verification_path(verification) %></td>
    <td><%= link_to 'Destroy', verification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

